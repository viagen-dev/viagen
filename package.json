{
  "name": "viagen",
  "version": "0.0.8",
  "description": "Dev server plugin (Vite + webpack) that exposes endpoints for chatting with Claude Code SDK",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./webpack": {
      "types": "./dist/webpack.d.ts",
      "import": "./dist/webpack.js",
      "require": "./dist/webpack.cjs"
    }
  },
  "bin": {
    "viagen": "./dist/cli.js"
  },
  "files": [
    "dist",
    "site"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "vite --config site/vite.config.ts site",
    "preview": "vite preview --config site/vite.config.ts site",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vite": ">=4",
    "webpack": ">=5",
    "webpack-dev-server": ">=4"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "webpack": {
      "optional": true
    },
    "webpack-dev-server": {
      "optional": true
    }
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/connect": "^3.4.38",
    "@types/node": "^25.2.3",
    "connect": "^3.7.0",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.5.1",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^2.1.42",
    "@vercel/sandbox": "^1",
    "lucide-react": "^0.564.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cif/viagen.git"
  }
}
